

libyaml_src_files = [
    "src/api.c",
    "src/reader.c",
    "src/scanner.c",
    "src/parser.c",
    "src/loader.c",
    "src/writer.c",
    "src/emitter.c",
    "src/dumper.c",
]

cc_library_shared {
    name: "libyaml",
    srcs: libyaml_src_files,
    export_include_dirs: ["include"],
    cflags: [
        "-DHAVE_CONFIG_H",
        "-Wno-unused-parameter",
    ],
    vendor: true,
    compile_multilib: "both",
}
